package Ejer2;

public class MainTest {

	public static void main(String[] args) {
		Hilo hilo = new Hilo();
		Panel panel1 = new Panel("panel1", 620, 500);
		hilo.crearMatrices();
		hilo.suma();
		panel1.escribir_mensaje("Usando panel el hilo "+ hilo.getClass().getName()
								+"\nMatriz A = \n"+hilo.escribir(hilo.getMatrizA())
								+"\nMatriz B = \n"+hilo.escribir(hilo.getMatrizB())
								+"\nMatriz C = \n"+hilo.escribir(hilo.getMatrizC())
								+"\nTerminando de usar el panel el hilo "+ hilo.getClass().getName());
		
	}

}
