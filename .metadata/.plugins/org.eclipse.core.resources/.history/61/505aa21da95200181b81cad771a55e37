package Ejer2;

public class MainTest {

	public static void main(String[] args) {
		Hilo hilo = new Hilo();
		Panel panel1 = new Panel("panel1", 620, 500);
		hilo.crearMatrices();
		hilo.suma();
		panel1.escribir_mensaje("Usando panel el hilo "+hilo.getClass().getName());
		panel1.escribir_mensaje("Matriz A = "+hilo.escribir(hilo.getMatrizA()));
		panel1.escribir_mensaje("Matriz B = "+hilo.escribir(hilo.getMatrizB()));
		panel1.escribir_mensaje("Matriz C = "+hilo.escribir(hilo.getMatrizC()));
		panel1.escribir_mensaje("Terminando de usar el panel el hilo "+hilo.getName());
		
	}

}
